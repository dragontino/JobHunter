<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.JobHunter" parent="Theme.Material3.Dark.NoActionBar">
        <item name="backgroundColor">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.JobHunter" parent="Base.Theme.JobHunter" />


    <style name="MaterialToolbar" parent="Base.Theme.Material3.Dark">
        <item name="android:background">@color/shadows</item>
    </style>


    <style name="BottomNavigationView" parent="Base.Theme.Material3.Dark">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:lineHeight">11sp</item>
        <item name="android:background">@color/shadows</item>
    </style>


    <style name="BottomNavigationView.Active">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="BottomNavigationView.Inactive">
        <item name="android:textColor">@color/grey4</item>
    </style>

    
    <style name="Title1">
        <item name="android:font">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Title2">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Title4">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button1">
        <item name="android:font">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button2">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="Text1">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="placeholder">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#9F9F9F</item>
    </style>
</resources>