<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/vacancy_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircleImage"
        app:srcCompat="@drawable/image_vacancy" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/resume_for_respond"
        style="@style/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="17sp"
        android:text="@string/resume_for_respond"
        android:textColor="@color/grey3"
        app:fontFamily="@font/sf_pro_display_regular"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/vacancy_image"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="17sp"
        android:text="@string/vacancy_designer"
        android:textColor="@color/white"
        app:fontFamily="@font/sf_pro_display_regular"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/vacancy_image"
        app:layout_constraintTop_toBottomOf="@id/resume_for_respond" />

</androidx.constraintlayout.widget.ConstraintLayout>