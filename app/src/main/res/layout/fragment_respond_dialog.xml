<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:paddingHorizontal="16dp"
    android:paddingTop="32dp">

    <View
        android:id="@+id/bottom_sheet_drag_handler"
        android:layout_width="38dp"
        android:layout_height="5dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bottom_sheet_drag_handler"
        android:layout_gravity="center"
        />


    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="32dp"
        layout="@layout/respond_header" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerColor="@color/grey4"
        android:layout_marginTop="24dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/cover_letter_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Text1"
        android:minHeight="85dp"
        android:gravity="start"
        android:textColorHint="@color/grey3"
        android:hint="@string/your_cover_letter"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/respond_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_button_small_corners_bg"
        android:textAppearance="@style/Button1"
        android:textColor="@color/white"
        android:text="@string/respond"
        android:fontFamily="@font/sf_pro_display_semibold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="78dp"
        android:elevation="4dp"
        />
</androidx.appcompat.widget.LinearLayoutCompat>